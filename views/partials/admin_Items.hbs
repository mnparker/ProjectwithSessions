
{{# each products}}
    <div class="container">
        <div class="row">
            {{# each this}}
                <div class="col">

                    <!--Card 1 -->
                    <div class="card mt-5 bg-light" style="width: 18rem; margin: 5%;">
                        <input type="image" class="card-img-top" src="{{this.path}}" alt="{{this.name}}" width="300" height="300">
                        <div class="card-body">
                        </div>
                        <form id="{{this._id}}" class="form" action="/updateProduct/{{this._id}}" method="post">
                            <label for="path">Path:</label>
                            <input class="form-control" id="image" name="image" value="{{this.path}}">

                            <label for="type">Type:</label>
                            <input class="form-control" id="type" name="type" value="{{this.type}}">

                            <label for="name">Name:</label>
                            <input class="form-control" id="name" name="name" value="{{this.name}}">

                            <label for="color">Color:</label>
                            <input class="form-control" id="color" name="color" value="{{this.color}}">

                            <label for="price">Price:</label>
                            <input class="form-control" id="price" name="price" value="{{this.price}}">
                        </form>
                        <div class="card-body d-flex justify-content-center">
                                <form method="post" action="/deleteProduct/{{this._id}}" style="margin-left: 5px; margin-right: 5px;">
                                    <button type="submit" class="btn btn-outline-danger">Remove</button>
                                </form>
                            <button type="submit" class="btn btn-outline-success" form="{{this._id}}">Update</button>
                            <!--<input type="hidden" id="{{this._id}} name={{this._id}}">-->
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/each}}

