	var y = event.clientY;
	
	elementMouseIsOver = document.elementFromPoint(x, y);
	elementMouseIsOver.style.border = 'solid';
	
	setTimeout(function() {
   elementMouseIsOver.style.border = 'none';
  }, 500);
	
	
}


